<h1>{{pagetitle}}</h1>

{{#if desc}}
<p>{{desc}}</p>
{{else}}
<p>Description manually here</p>
{{/if}}

<div class="card-container">

    {{#each planets}}

    <div class="card">
        <div class="card-image">
            {{!-- CARD IMAGE HERE --}}
        </div>
        <div class="card-header">

            <h3>{{name}}</h3>
            <p>{{type}}</p>
        </div>

        <div class="card-body">
            <p><strong>Distance from Sun:</strong> {{distance_from_sun_km}} km</p>
            <p><strong>Diameter:</strong> {{diameter_km}} km</p>
            <p><strong>Number of Moons:</strong> {{number_of_moons}}</p>
            
        </div>
    </div>

    {{/each}}


</div>